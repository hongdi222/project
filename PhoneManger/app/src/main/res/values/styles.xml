<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bluePrimaryColor</item>
        <item name="colorPrimaryDark">@color/darkBluePrimarColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ListItemTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/item_textsize</item>
    </style>
    <style name="FileManagerLeftItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/item_margin</item>
        <item name="android:textSize">@dimen/item_textsize</item>
    </style>
    <style name="FileManagerRightItem">
        <item name="android:layout_width">@dimen/item_textsize</item>
        <item name="android:layout_height">@dimen/item_textsize</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/item_margin</item>
    </style>
</resources>
