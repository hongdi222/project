<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_telmgr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/item_textsize"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:drawableTop="@drawable/icon_telmgr"
            android:text="电话助手" />

        <TextView
            android:id="@+id/tv_softmgr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/item_textsize"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:drawableTop="@drawable/icon_softmgr"
            android:text="软件信息" />

        <TextView
            android:id="@+id/tv_sdclean"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/item_textsize"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:drawableTop="@drawable/icon_sdclean"
            android:text="手机清理" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_rocket"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/item_textsize"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:drawableTop="@drawable/icon_rocket"
            android:text="手机加速" />

        <TextView
            android:id="@+id/tv_phonemgr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/item_textsize"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:drawableTop="@drawable/icon_phonemgr"
            android:text="手机状态" />

        <TextView
            android:id="@+id/tv_filemgr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/item_textsize"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:drawableTop="@drawable/icon_filemgr"
            android:text="文件管理" />
    </LinearLayout>

</LinearLayout>
